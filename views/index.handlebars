<div class="container">

    <div class="jumboton">
        <img src="/assets/img/burger.jpg" alt="burger">
        <h2>Burgers to be DEVOURED!</h2>
    </div>

    <div class="row">
        <div class="col-md-5">
            <ul>
                {{#each burgers}}
                {{#unless devoured}}
                <li class="list-group-item">
                    <p class="lead">{{burger_name}}</p>

                    <span class="devour-btn">
                        <button class="change-devour" data-id="{{id}}" data-devourburger="{{devoured}}">
                            {{#unless devoured}}DEVOUR BURGER!{{/unless}}
                        </button>
                        <button class="delete-burger" data-id="{{this.id}}">
                            DELETE!
                        </button>
                    </span>
                </li>
                {{/unless}}
                {{/each}}
            </ul>
        </div>
    </div>

    <h2>Burgers DEVOURED!</h2>

    <ul>
        <div class="row">
            <div class="col-md-5">
                <ul class="list-group">
                    {{#each burgers}}
                    {{#if devoured}}
                    <li class="list-group-item">
                        <p class="lead">{{burger_name}}</p>

                        <span class="devour-btn">
                            <button class="delete-burger" data-id="{{this.id}}">
                                DELETE!
                            </button>
                        </span>
                    </li>
                    {{/if}}
                    {{/each}}
                </ul>
            </div>
        </div>
    </ul>

    <h2>Add Burger</h2>

    <form class="create-form">
        <div class="form-group">
            <label for="burge">Burger Name:</label>
            <input type="text" id="burge" name="burger_name">
        </div>

        <button type="submit">Add Burger</button>
    </form>

</div>